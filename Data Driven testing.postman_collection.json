{
	"info": {
		"_postman_id": "d982f461-d4a4-47ca-b3f0-b3df67666ab0",
		"name": "Data Driven testing",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "21223113"
	},
	"item": [
		{
			"name": "CSV File Credentials",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Check if login was successful\", function () {\r",
							"    pm.response.to.have.status(200); // Expect 200 OK response\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.token).to.exist; // Ensure token exists in response\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n   \"email\": \"{{username}}\",\r\n   \"password\": \"{{password}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://reqres.in/api/login",
					"protocol": "https",
					"host": [
						"reqres",
						"in"
					],
					"path": [
						"api",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Extract Data From Response",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let response = pm.response.json();\r",
							"pm.environment.set(\"userId\", response.id);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "let response = pm.response.json();\r\npm.environment.set(\"userId\", response.id);\r\n",
					"options": {
						"raw": {
